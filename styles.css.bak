.video-game-button {
	text-shadow: 1px 1px pink, -1px -1px maroon;
	text-align: center;
	align-content: center;
	line-height: 1.5em;
	text-align: center;
	display: inline-block;
	width: 1.5em;
	-webkit-border-radius: .75em;
	-moz-border-radius: .75em;
	-o-border-radius: .75em;
		border-radius: .75em;
	background-color: red;
